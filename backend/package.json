{
  "name": "estudio-artesana-backend-services",
  "version": "1.0.0",
  "description": "Servicios backend para Estudio Artesana: email notifications, shipping integration y payment processing",
  "main": "email-service.js",
  "scripts": {
    "start": "concurrently -n \"EMAIL,SHIPPING,PAYMENT\" -c \"green,cyan,magenta\" \"node email-service.js\" \"node shipping-service.js\" \"node payment-service.js\"",
    "start:email": "node email-service.js",
    "start:shipping": "node shipping-service.js",
    "start:payment": "node payment-service.js",
    "dev": "concurrently -n \"EMAIL,SHIPPING,PAYMENT\" -c \"green,cyan,magenta\" \"nodemon email-service.js\" \"nodemon shipping-service.js\" \"nodemon payment-service.js\"",
    "dev:email": "nodemon email-service.js",
    "dev:shipping": "nodemon shipping-service.js",
    "dev:payment": "nodemon payment-service.js",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "email",
    "notifications",
    "shipping",
    "envia",
    "payment",
    "openpay",
    "bbva",
    "wholesale",
    "ecommerce",
    "artesania"
  ],
  "author": "Estudio Artesana",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "express": "^4.18.2",
    "nodemailer": "^6.9.7",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/estudio-artesana/email-service.git"
  },
  "bugs": {
    "url": "https://github.com/estudio-artesana/email-service/issues"
  },
  "homepage": "https://github.com/estudio-artesana/email-service#readme"
}
